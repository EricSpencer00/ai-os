<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.auraos.vm-wake-check</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>-c</string>
        <string>
            REPO_ROOT="$HOME/GitHub/ai-os"
            export REPO_ROOT
            bash "$REPO_ROOT/tools/vm_wake_check.sh"
        </string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <!-- Run every 5 minutes (300 seconds) as a background daemon -->
    <key>StartInterval</key>
    <integer>300</integer>
    
    <!-- Also trigger after system wakes from sleep -->
    <key>WakeNetworkOnDemand</key>
    <true/>
    
    <!-- Keep trying if the command fails -->
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/tmp/auraos-wake-check.log</string>
    
    <key>StandardErrorPath</key>
    <string>/tmp/auraos-wake-check.err</string>
</dict>
</plist>
