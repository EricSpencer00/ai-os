{
    "GROQ_API_KEY": "your-api-key-here",
    "OPENAI_API_KEY": "your-openai-api-key-here",
    "MVP_NOTE": "For the local MVP: install Ollama (./install.sh) and set OLLAMA.enabled to true to run LLMs locally; prefer gemma:2b for low-resource hosts.",
    "API_TIMEOUT": 60,
    "MAX_RETRY_ATTEMPTS": 3,
    "OLLAMA": {
        "enabled": false,
        "host": "localhost",
        "port": 11434,
        "model": "gemma:2b",
        "comment": "Set enabled to true after installing Ollama and pulling a model"
    },
    "LLM_ROUTING": {
        "prefer_local": true,
        "complexity_threshold": 50,
        "fallback_to_cloud": true,
        "comment": "prefer_local: Use Ollama first when available. complexity_threshold: 0-100, higher = prefer cloud for complex tasks"
    },
    "VM": {
        "headless": true,
        "default_memory": "2048",
        "default_cpus": "2",
        "ssh_user": "auraos",
        "ssh_password": "auraos123",
        "comment": "VM settings for QEMU ARM64 virtual machines"
    },
    "SECURITY": {
        "STRICT_MODE": true,
        "ALLOWED_DOMAINS": [
            "github.com",
            "stackoverflow.com",
            "docs.python.org"
        ],
        "RESTRICTED_COMMANDS": [
            "rm -rf",
            "sudo",
            "chmod 777"
        ]
    },
    "PLUGINS": {
        "shell": {
            "enabled": true,
            "max_execution_time": 30
        },
        "selenium_automation": {
            "enabled": true,
            "headless": false,
            "browser": "chrome",
            "comment": "browser options: chrome, firefox"
        },
        "window_manager": {
            "enabled": true
        },
        "vm_manager": {
            "enabled": true,
            "comment": "Requires QEMU to be installed: brew install qemu"
        }
    },
    "SELF_IMPROVEMENT": {
        "auto_install_packages": true,
        "rollback_enabled": true,
        "max_errors_before_rollback": 3
    },
    "OUTPUT_VALIDATION": {
        "enabled": true,
        "auto_improve": true,
        "max_improvement_attempts": 3,
        "improvement_timeout": 30
    },
    "MEMORY": {
        "max_history_items": 100,
        "similarity_threshold": 0.3
    },
    "LOGGING": {
        "level": "INFO",
        "file": "aura_os.log",
        "max_size_mb": 10,
        "backup_count": 3
    }
}
